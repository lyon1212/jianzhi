.list-top { width: 100%;background-size: 100%;background-position: top center;background-repeat: no-repeat; }
.list-top .list-top-box{ display: flex;flex-wrap: wrap;width: 100%;justify-content: center;background-color: rgba(66, 208, 227, .1);padding-top: 40rpx;  }
.list-top .list-top-box .list-top-item{ width: 44%;box-sizing: border-box;height: 160rpx;border-radius: 20rpx;background-color: #fff;margin-bottom: 20rpx;display: flex;align-items: center;justify-content: center;  }

.list-top .list-top-box .list-top-item:nth-child(2n-1) { margin-right: 10rpx; }
.list-top .list-top-box .list-top-item:nth-child(2n) { margin-left: 10rpx; }
.list-top .list-top-box .list-top-item image { width: 80rpx;height: 80rpx;margin:0 10rpx; }
.list-top .list-top-box .list-top-item .top-item-con { display: flex;flex-direction: column;flex: 1; }